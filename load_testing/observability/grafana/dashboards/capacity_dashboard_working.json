{
  "dashboard": {
    "title": "Capacity Testing - Metrics Dashboard",
    "uid": "capacity-metrics-v1",
    "tags": ["capacity", "load-testing", "performance"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 0,
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üî• CPU Usage % - FastAPI Container",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".*fastapi.*\"}[1m]) * 100",
            "legendFormat": "FastAPI CPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 70,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 2,
        "title": "üíæ Memory Usage - FastAPI Container (MB)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{name=~\".*fastapi.*\"} / 1024 / 1024",
            "legendFormat": "FastAPI Memory (MB)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "decmbytes"
          }
        }
      },
      {
        "id": 3,
        "title": "üìä CPU Usage % - All Containers",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".*(fastapi|postgres|redis).*\"}[1m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 5
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "üóÑÔ∏è PostgreSQL Active Connections",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"desarrollo_sw_nube\"}",
            "legendFormat": "Active DB Connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                },
                {
                  "value": 15,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "üî¥ Redis Connected Clients",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "redis_connected_clients",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name"
        }
      },
      {
        "id": 6,
        "title": "‚ö° Redis Operations/sec",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[1m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 7,
        "title": "üåê Network I/O - FastAPI (bytes/sec)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\".*fastapi.*\"}[1m])",
            "legendFormat": "RX (incoming)",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\".*fastapi.*\"}[1m])",
            "legendFormat": "TX (outgoing)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "Bps"
          }
        }
      },
      {
        "id": 8,
        "title": "üíæ Memory - All Containers (MB)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{name=~\".*(fastapi|postgres|redis).*\"} / 1024 / 1024",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 5
            },
            "unit": "decmbytes"
          }
        }
      }
    ]
  },
  "overwrite": true
}
